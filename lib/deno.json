{
	"name": "@sitebender/sitebender",
	"version": "0.1.0",
	"description": "Adaptive web components with progressive enhancement and build-time validation",
	"license": "MIT",
	"exports": {
		".": "./index.ts"
	},
	"imports": {},
	"tasks": {
		"build": "deno task compile",
		"compile": "deno run --unstable-temporal --allow-read --allow-write build.ts",
		"test": "deno test --unstable-temporal --allow-read --allow-write tests",
		"lint": "deno lint",
		"fmt": "deno fmt"
	},
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "createElement",
		"jsxFragmentFactory": "Fragment",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"lib": ["dom", "dom.asynciterable", "dom.iterable", "esnext", "deno.ns"],
		"types": ["./types/JSX/index.ts", "./types/JSX/attributes/index.ts"]
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve"
	}
}
